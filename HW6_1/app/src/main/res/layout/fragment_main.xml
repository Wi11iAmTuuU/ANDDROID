<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgBtnDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/dice01" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnShowResult1"
        android:layout_alignStart="@+id/btnShowResult1"
        android:text="@string/result"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnShowResult2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnShowResult1"
        android:layout_alignBottom="@+id/btnShowResult1"
        android:layout_alignStart="@+id/imgBtnDice"
        android:layout_marginStart="37dp"
        android:text="@string/btn_show_result2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnShowResult1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnHiddenResult"
        android:layout_toStartOf="@+id/imgBtnDice"
        android:text="@string/btn_show_result1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnHiddenResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgBtnDice"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="41dp"
        android:text="@string/btn_hidden_result"
        android:textSize="20sp" />

</RelativeLayout>
